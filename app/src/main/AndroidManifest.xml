<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epitech.epidroid">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".EpiContext"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".DisconnectActivity"
            android:label="@string/title_activity_disconnect" />
        <activity
            android:name=".ModulesActivity"
            android:label="@string/title_activity_modules" />
        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar" />
        <activity
            android:name=".ProjectsActivity"
            android:label="@string/title_activity_projects" />
        <activity
            android:name=".YearbookActivity"
            android:label="@string/title_activity_yearbook" />
        <activity
            android:name=".RegisterTokenActivity"
            android:label="@string/title_activity_register_token"/>
            android:label="@string/title_activity_register_token" />

        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user"/>
    </application>

</manifest>
